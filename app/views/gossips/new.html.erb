<html>
<body>
  <center>
  <div class = 'container col-md-8'>
    <% if @gossip.errors.any? %>
  <div class="alert alert-danger" role="alert"><p>Ton gossip est invalide ! N'oublie pas de remplir tous les champs !</p>
      <ul>
        <% @gossip.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
  </div>
  <% end %>
  </div>
  
  <div class= "container col-md-8">
  </br></br>
  <h1>Ajoute ton Gossip !</h1></br></br>
  
    <%= form_tag url_for(action: 'create'), method: "post" do %>

      <%= label_tag 'Titre' %></br>
      <%= text_field_tag 'title', @gossip.title %>
      </br></br>

      <%= label_tag 'Contenu' %></br>
      <%= text_area_tag 'content', @gossip.content %>
      </br></br>

      <%= submit_tag "Gogossip !" %>
      <% end %>
  </div>
</form>
</center>

</body>
</html>